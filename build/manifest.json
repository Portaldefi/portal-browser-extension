{
  "name": "@fabric/passport",
  "description": "Sign in to websites using Fabric.",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Fabric Wallet"
  },
  "permissions": [
    "tabs", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/contentscript.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
